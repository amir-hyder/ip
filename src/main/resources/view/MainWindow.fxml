<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="friday.MainWindow">

    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" AnchorPane.topAnchor="1.0" AnchorPane.leftAnchor="1.0"
                    AnchorPane.rightAnchor="1.0" AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="12.0" fillWidth="true">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>
                </VBox>

            </content>
        </ScrollPane>

        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   AnchorPane.leftAnchor="1.0"
                   AnchorPane.rightAnchor="55.0"
                   AnchorPane.bottomAnchor="1.0"/>

        <Button fx:id="sendButton" text="Send"
                onAction="#handleUserInput"
                AnchorPane.rightAnchor="1.0"
                AnchorPane.bottomAnchor="1.0"/>

    </children>
</AnchorPane>
